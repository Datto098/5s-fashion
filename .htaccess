RewriteEngine On

# Security - Block access to sensitive files
RewriteRule ^(.*/)?\.env$ - [F,L]
RewriteRule ^(.*/)?\.git - [F,L]
RewriteRule ^(.*/)?composer\.(json|lock)$ - [F,L]
RewriteRule ^(.*/)?\.htaccess$ - [F,L]

# Allow access to public assets
RewriteCond %{REQUEST_FILENAME} -f
RewriteCond %{REQUEST_URI} \.(css|js|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)$ [NC]
RewriteRule ^public/(.*)$ public/$1 [L]

# Allow access to uploads
RewriteCond %{REQUEST_FILENAME} -f
RewriteCond %{REQUEST_URI} ^/public/uploads/ [NC]
RewriteRule .* - [L]

# Allow direct access to API files in public/api/
RewriteCond %{REQUEST_FILENAME} -f
RewriteCond %{REQUEST_URI} ^/5s-fashion/api/ [NC]
RewriteRule ^api/(.*)$ public/api/$1 [L]

# Handle chatbot API requests
RewriteRule ^chatbot-api.php$ public/chatbot-api.php [QSA,L]

# API Routes - redirect remaining to api.php
RewriteRule ^api/(.*)$ public/api.php [QSA,L]

# Special handling for shop pages to preserve category parameter
RewriteCond %{QUERY_STRING} (^|&)category=([^&]+)(&|$)
RewriteRule ^shop/?$ public/index.php?url=shop [QSA,L]

# Route all other requests to index.php
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ public/index.php?url=$1 [QSA,L]
